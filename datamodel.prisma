type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  name: String!
  username: String! @unique
  shops: [Shop] @relation(name: "ShopOwners")
}

type Shop {
  id: ID! @unique
  name: String! @unique
  description: String!
  live: Boolean! @default(value: "false")
  owners: [User!] @relation(name: "ShopOwners")
  createdAt: DateTime!
  updatedAt: DateTime!
}